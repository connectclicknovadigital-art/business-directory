{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,              // ✅ allow .js and .jsx files
    "jsx": "react-jsx",           // ✅ ensure JSX is supported
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",                   // ✅ include .jsx files globally
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
